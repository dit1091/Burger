<div class="grid-item">
  <h2>Burgers that have not been devoured:</h2>

  <ul>
    {{#each burgers}}
      {{#unless devoured}}
        {{> burger-block}}
      {{/unless}}
    {{/each}}
  </ul>
</div>

<div class="grid-item">
  <form class="form-inline create-form centered-form">
    <h2>Add a Burger:</h2>
    <div class="form-group">
      <label for="burger">Burger Name:</label>
      <input type="text" id="burger" name="burger_name" autofocus required>
      <button type="submit">Add Burger</button>
    </div>
  </form>
  <img src="/assets/img/burger.png" alt="Picture of a burger">
</div>

<div class="grid-item">
  <h2>Burgers that have been devoured:</h2>

  <ul>
    {{#each burgers}}
      {{#if devoured}}
        {{> burger-block}}
      {{/if}}
    {{/each}}
  </ul>
</div>